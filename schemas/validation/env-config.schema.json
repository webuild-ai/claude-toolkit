{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Environment Configuration",
  "description": "Schema for validating environment variable configuration",
  "type": "object",
  "properties": {
    "required": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "description": {"type": "string"},
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "url", "email"]
          },
          "example": {"type": "string"},
          "sensitive": {"type": "boolean", "default": false}
        },
        "required": ["name", "description"]
      }
    },
    "optional": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "description": {"type": "string"},
          "default": {"type": "string"},
          "type": {"type": "string"}
        },
        "required": ["name", "description"]
      }
    },
    "environments": {
      "type": "object",
      "properties": {
        "development": {"type": "object"},
        "staging": {"type": "object"},
        "production": {"type": "object"}
      }
    }
  },
  "required": ["required"]
}
