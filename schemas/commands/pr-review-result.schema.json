{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PR Review Result",
  "description": "Structured output for code review results",
  "type": "object",
  "properties": {
    "overallAssessment": {
      "type": "string",
      "enum": ["APPROVE", "REQUEST_CHANGES", "COMMENT"],
      "description": "Overall review decision"
    },
    "summary": {
      "type": "string",
      "description": "Brief summary of the review"
    },
    "strengths": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Positive aspects of the PR"
    },
    "criticalIssues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": {"type": "string"},
          "line": {"type": "integer"},
          "issue": {"type": "string"},
          "severity": {"type": "string", "enum": ["critical", "high", "medium", "low"]},
          "suggestion": {"type": "string"}
        },
        "required": ["file", "issue", "severity"]
      }
    },
    "suggestions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": {"type": "string"},
          "line": {"type": "integer"},
          "suggestion": {"type": "string"},
          "priority": {"type": "string", "enum": ["must", "should", "nice-to-have"]}
        }
      }
    },
    "questions": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Questions for clarification"
    }
  },
  "required": ["overallAssessment", "summary"]
}
